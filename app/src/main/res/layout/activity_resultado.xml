<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Resultado">

    <LinearLayout
        android:id="@+id/vg_headerResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradiente_bg"
        android:orientation="vertical">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="52dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/payments_24dp"
            app:tint="@color/white" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="CALCULADORA SALÁRIO LÍQUIDO"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="64dp"
            android:text="Confira abaixo o seu salário líquido mensal"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/salarioLiquido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="112dp"
            android:layout_marginBottom="72dp"
            android:textSize="52sp"
            android:textStyle="bold"
            android:drawableStart="@drawable/paid_42dp"
            tools:text="25000" />

    </LinearLayout>

</LinearLayout>
